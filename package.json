{
  "name": "@beuluis/hook-cli",
  "version": "1.2.0",
  "description": "A small hook cli that can be used with for example husky",
  "bin": {
    "hook-cli": "./dist/index.js",
    "@beuluis/hook-cli": "./dist/index.js"
  },
  "main": "dist",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepack": "npm run build",
    "build": "tsc --build",
    "hook-cli": "ts-node src/index.ts",
    "test": "npm run hook-cli -- --help",
    "lint": "eslint .",
    "format": "prettier . --check",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beuluis/hook-cli.git"
  },
  "author": "Luis Beu <me@luisbeu.de> (https://luisbeu.de/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/beuluis/hook-cli/issues"
  },
  "homepage": "https://github.com/beuluis/hook-cli#readme",
  "dependencies": {
    "console-log-colors": "^0.2.3",
    "console-table-printer": "^2.11.0",
    "listr": "^0.14.3",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@beuluis/eslint-config": "1.0.2",
    "@beuluis/hook-cli": "1.1.3",
    "@beuluis/prettier-config": "2.0.1",
    "@types/listr": "0.14.4",
    "@types/node": "18.7.18",
    "@types/yargs": "17.0.12",
    "eslint": "8.23.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "np": "7.6.2",
    "ts-node": "10.9.1",
    "tslib": "2.4.0",
    "typescript": "4.8.3"
  },
  "keywords": [
    "cli",
    "hooks",
    "husky",
    "husky-hooks"
  ],
  "prettier": "@beuluis/prettier-config",
  "lint-staged": {
    "*.md": [
      "prettier --write"
    ],
    "*.{js,ts,json,yml,yaml}": [
      "prettier --write",
      "eslint"
    ]
  },
  "np": {
    "tests": false,
    "publish": false
  }
}
